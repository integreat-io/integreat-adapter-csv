{
  "name": "integreat-adapter-csv",
  "version": "0.1.0",
  "description": "CSV adapter for Integreat",
  "author": "Kjell-Morten Bratsberg Thorsen <post@kjellmorten.no>",
  "license": "ISC",
  "keywords": [
    "integreat",
    "csv"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "tsc && node dist/index.js",
    "test": "tsc && nyc --reporter=text-summary ava dist/**/*.test.js",
    "test:watch": "npm run dev",
    "test:inspect": "node --inspect node_modules/ava/profile.js",
    "dev": "ava --watch",
    "build": "tsc",
    "prepare": "npm run build",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "nyc:report": "nyc report",
    "lint": "tslint --project tsconfig.json --config tslint.json"
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register/transpile-only"
    ],
    "files": [
      "src/**/*.test.ts"
    ],
    "sources": [
      "src/**/!(*.test).ts"
    ]
  },
  "nyc": {
    "exclude": [
      "**/*.test.js",
      "**/*.test.ts"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/integreat-io/integreat-adapter-csv.git"
  },
  "bugs": {
    "url": "https://github.com/integreat-io/integreat-adapter-csv/issues"
  },
  "homepage": "https://github.com/integreat-io/integreat-adapter-csv#readme",
  "engines": {
    "node": ">= 8.6",
    "npm": ">= 5.4"
  },
  "devDependencies": {
    "ava": "^1.4.1",
    "babel-preset-env": "^1.7.0",
    "coveralls": "^3.0.3",
    "nyc": "^13.3.0",
    "ts-node": "^8.0.3",
    "tslint": "^5.15.0",
    "tslint-config-security": "^1.15.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.4.1"
  },
  "dependencies": {
    "@types/node": "^11.13.0",
    "@types/sinon": "^7.0.11",
    "csv-parse": "^4.3.4",
    "csv-stringify": "^5.3.0",
    "sinon": "^7.3.1"
  }
}
